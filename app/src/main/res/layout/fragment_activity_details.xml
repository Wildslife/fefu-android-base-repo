<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/DetailsBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ButtonDelete"
        app:title="Велосипед"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/black"/>

    <ImageView
        android:id="@+id/ButtonDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/DetailsBar"
        app:layout_constraintEnd_toStartOf="@id/ButtonShare"
        app:layout_constraintBottom_toTopOf="@id/Distance"
        />

    <ImageView
        android:id="@+id/ButtonShare"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ButtonDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Distance"/>

    <TextView
        android:id="@+id/Distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/DetailsBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintHorizontal_bias="0.13"
        android:text="14.32 км"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/TimePassed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Distance"
        app:layout_constraintStart_toStartOf="@id/Distance"
        app:layout_constraintEnd_toEndOf="@id/Distance"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="14 часов назад"/>

    <TextView
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TimePassed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="1 ч 42 мин"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TimeStart"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.2"
        android:text="Старт"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        app:layout_constraintStart_toEndOf="@id/Start"
        app:layout_constraintEnd_toStartOf="@id/Separator"
        android:layout_marginStart="10dp"
        android:text="14:49"/>

    <TextView
        android:id="@+id/Separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        app:layout_constraintStart_toEndOf="@id/TimeStart"
        app:layout_constraintEnd_toStartOf="@id/Finish"
        android:layout_marginStart="18dp"
        android:text="|"/>

    <TextView
        android:id="@+id/Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        app:layout_constraintStart_toEndOf="@id/Separator"
        app:layout_constraintEnd_toStartOf="@id/TimeFinish"
        android:layout_marginStart="18dp"
        android:text="Финиш"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TimeFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Time"
        app:layout_constraintStart_toEndOf="@id/Finish"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:text="16:31"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CommentInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:hint="Комментарий">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>